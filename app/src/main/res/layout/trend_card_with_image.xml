<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    card:cardCornerRadius="2dp"
    card:cardElevation="4dp"
    card:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@id/trend_card_header_id"
            layout="@layout/trend_card_header" />

        <TextView
            android:id="@+id/trend_description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="A flavourful local favorite of Amit-try this all star, easy-to-follow artichokes with roasted"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/current_trend_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="center"
            android:src="@drawable/cover_education" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/divider" />

        <include
            android:id="@+id/basic_actions"
            layout="@layout/basic_action_for_trend" />
    </LinearLayout>
</android.support.v7.widget.CardView>
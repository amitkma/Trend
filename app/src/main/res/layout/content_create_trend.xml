<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arish.trend.Create_trend"
    tools:showIn="@layout/activity_create_trend">

    <ImageView
        android:id="@+id/img"
        android:layout_width="175dp "
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:alpha=".08"
        android:background="#38000000"

        android:src="@drawable/ic_image_black_24dp" />

    <LinearLayout
       android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"

        android:orientation="vertical">

        <LinearLayout
            style="@style/linearlayout_create_trend_edittext"
            android:layout_width="match_parent">

            <ImageView
                style="@style/icon_edittext"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_code_black_24dp" />

            <EditText
                android:hint="(Title)"
                style="@style/edittext_create_trend"
                android:layout_width="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            style="@style/linearlayout_create_trend_edittext"
            android:layout_width="match_parent">

            <ImageView
                style="@style/icon_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_subject_black_24dp" />

            <EditText
                android:hint="(Description)"
                style="@style/edittext_create_trend"
                android:layout_width="match_parent"
               />
        </LinearLayout>

        <LinearLayout
            style="@style/linearlayout_create_trend_edittext"
            android:layout_width="match_parent">

            <ImageView
                style="@style/icon_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_extension_black_24dp" />
            <EditText
                android:hint="(TAG's)"
                style="@style/edittext_create_trend"
                android:layout_width="match_parent"
                 />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

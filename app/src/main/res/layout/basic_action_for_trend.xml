<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basic_actions"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="start"
    android:padding="8dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:alpha="0.54"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:id="@+id/trend_like_icon_id"
        android:src="@drawable/ic_favorite_black_24dp" />

    <TextView
        android:id="@+id/trend_upvote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:layout_marginRight="8dp"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:fontFamily="sans-serif-medium"
        android:layout_centerVertical="true"
       android:layout_toRightOf="@+id/trend_like_icon_id" />

    <ImageView
        android:id="@+id/trend_share_icon_id"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:alpha="0.54"
        android:layout_toRightOf="@+id/trend_upvote_count"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:src="@drawable/ic_share_black_24dp" />
    <ImageView
        android:id="@+id/trend_comment_icon_id"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:alpha="0.54"
        android:layout_centerHorizontal="true"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_comment_black_24dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:fontFamily="sans-serif-medium"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/trend_comment_icon_id"
        android:layout_toStartOf="@+id/trend_comment_icon_id" />


</RelativeLayout>